{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@defs/*": ["src/lib/definitions/*"]
    },
    "types": ["svelte", "vite/client"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.d.ts",
    "vite.config.ts",
    "svelte.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".svelte-kit",
    ".vite",
    "coverage",
    "public"
  ]
}
