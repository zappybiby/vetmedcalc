// tsconfig.json
{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@defs": ["src/lib/definitions/index.ts"],
      "@defs/*": ["src/lib/definitions/*"]
    },
    "types": ["svelte", "vite/client"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.d.ts",
    "svelte.config.js",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules","dist","build",".svelte-kit",".vite","coverage","public","tmp","**/.git",".vscode"
  ]
}
